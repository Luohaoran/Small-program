/* pages/index/index.wxss */

/* 轮播外层div */

.swiper {
  margin: 0 auto;
  width: 95%;
  margin-bottom: 5px;
  /* border: 1px solid black; */
}

/* 轮播图片格式社设置 */

.slide-image {
  width: 100%;
}

/* 通知栏设置 */

.notice {
  margin: 0 auto;
  width: 95%;
  display: flex;
  justify-content: center;
  align-items: center;
  /* border: 1px solid black; */
  margin-bottom: 10px;
}

.notice image {
  width: 25px;
  height: 25px;
}

.notice text {
  font-size: 26rpx;
}

/* 奶茶店 */

.milk {
  margin: 0 auto;
  width: 95%;
  height: 60px;
  display: flex;
  align-items: center;
  justify-content: center;
  /* border: 1px solid black; */
  border-radius: 5px;
  box-shadow: 0 0 3px rgba(209, 209, 209, 0.8);
  margin-bottom: 10px;
}

.milk view {
  margin: 0 10px;
}

.milkImg {
  /* border: 1px solid red; */
  width: 40px;
  height: 40px;
  border-radius: 40px;
  overflow: hidden;
}

.milkImg image {
  width: 40px;
  height: 40px;
}

/* 文字 */

.naicha {
  font-size: 16px;
}

.dizhi {
  font-size: 12px;
  color: #cdc9c9;
}

/* 电话 */

.phone {
  width: 30px;
  height: 30px;
}

.phone image {
  width: 30px;
  height: 30px;
}

/* 我要买单 */

.maidan {
  width: 95%;
  margin: 0 auto;
  /* border: 1px solid black; */
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between;
  margin-bottom: 10px;
}

.content-item {
  height: 60px;
  width: 60px;
  position: relative;
}

.content-item image {
  height: 100rpx;
  width: 100%;
}

.title {
  position: absolute;
  bottom: 12rpx;
  font-size: 12px;
  text-align: center;
  width: 100%;
}

/* 推荐 */

.recommend {
  /* border: 1px solid black; */
  display: flex;
  border-radius: 5px;
  overflow: hidden;
  width: 95%;
  height: 350rpx;
  margin: 0 auto;
}

.dianzhuimg {
  /* border: 1px solid black; */
  width: 100%;
  height: 350rpx;
}

.dianzhuimg image {
  max-width: 100%;
  max-height: 100%;
}

.dianzhu {
  width: 45%;
  position: relative;
}

.dianzhu-wenzi {
  left: 3px;
  position: absolute;
  top: 10px;
}

.dianzhu-wenzi :nth-child(1) {
  font-size: 36rpx;
  color: rgb(140, 122, 93);
}

.dianzhu-wenzi :nth-child(2) {
  font-size: 26rpx;
  color: rgb(200, 182, 152);
}

/* 右边 */

.right {
  width: 50%;
  height: 350rpx;
  /* outline: 1px solid black; */
  margin-left: 10px;
}

.right-dian {
  width: 100%;
  height: 45%;
  overflow: hidden;
  position: relative;
  border-radius: 5px;
  margin-bottom: 20rpx;
}

.bj {
  overflow: hidden;
  width: 100%;
  height: 100%;
}

.bj image {
  width: 100%;
  height: 100%;
}

.beizi {
  width: 100%;
  height: 100%;
  position: absolute;
  left: -20%;
  top: 30%;
}

.beizi image {
  width: 80%;
  height: 80%;
}

.dian-wenzi {
  position: absolute;
  top: 10px;
  right: 1px;
  text-align: right;
  margin-right: 10rpx;
}

.dian-wenzi view:nth-child(1) {
  font-size: 36rpx;
  color: rgb(109, 135, 188);
}

.dian-wenzi view:nth-child(2) {
  font-size: 26rpx;
  color: rgb(170, 184, 212);
}

.right-wai {
  border-radius: 5px;
  width: 100%;
  height: 45%;
  overflow: hidden;
  position: relative;
  margin-top: 35rpx;
}

.wai-wenzi {
  position: absolute;
  top: 10px;
  left: 1px;
  text-align: left;
  margin-left: 10rpx;
}

.wai-beizi {
  left: 40%;
}

.wai-wenzi view:nth-child(1) {
  font-size: 36rpx;
  color: rgb(115, 152, 93);
}

.wai-wenzi view:nth-child(2) {
  font-size: 26rpx;
  color: rgb(168, 197, 150);
}

/* 今日推荐 */

.today {
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 0 auto;
  margin-top: 20rpx;
  /* border: 1px solid black; */
  width: 95%;
  height: 100rpx;
}
.fire{
  /* border: 1px solid black; */
  width: 50rpx;
  height: 50rpx;
}
.fire image{
   width: 50rpx;
  height: 50rpx;
}
.wenben{
  margin-left: 20rpx;
  text-align: center;
}
.hr{
  margin: 0 auto;
  width: 100%;
  height: 1rpx;
  border-bottom: 1px solid rgba(0, 0, 0, 0.5);
}
.wenben view:nth-child(1){
  font-weight: bolder;
  font-size: 30rpx;
  letter-spacing:10rpx;
}
.wenben view:nth-child(3){
  font-size: 26rpx;
  color: rgba(0, 0, 0, 0.3)
}

/* 商品界面 */

.commodity{
  display: flex;
  flex-wrap: wrap;
justify-content: center;
  margin: 0 auto;
  width: 95%;
  height: auto;
  /* border: 1px solid black; */
  text-align: center;
}
.box{
  margin-left: 20rpx;
  /* overflow: hidden; */
  /* border: 1px solid black; */
  width: 45%;
  height: 550rpx;
  justify-content: center;
}
.imgbox{
  overflow: hidden;
  border-radius:40rpx;
  width: 100%;
  height: 350rpx;
}
.imgbox image{
  width: 100%;
  height: 100%;
}

.mai{
  width: 70%;
  background: none;
  border: 1px solid rgb(238, 78, 90);
  border-radius: 30rpx;
  height: 60rpx;
  line-height: 60rpx;
  color:  rgb(238, 78, 90);
}
.mai::after {
  border: 0;
}
.price{
  color:  rgb(238, 78, 90);
}
