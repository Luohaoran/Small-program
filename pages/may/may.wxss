/* 头像页面 */

.userinfo {
  width: 100%;
  height: 300rpx;
  background-color: rgb(253, 185, 89);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 50rpx 20rpx 20rpx 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: black;
}

/* 代发货 */

.two {
  background: white;
  width: 100%;
  height: 200rpx;
  /* outline: 1px solid black; */
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 10rpx;
}

.img {
  width: 25%;
  height: 200rpx;
  /* outline: 1px solid black; */
  position: relative;
  text-align: center;
}

.img image {
  margin-top: 30rpx;
  width: 50%;
  height: 50%;
}

.img view {
  position: absolute;
  bottom: 30rpx;
  left: 33%;
  font-size: 20rpx;
}

