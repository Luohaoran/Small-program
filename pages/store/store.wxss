  margin: 0 auto;
  /* border: 1px solid black; */
  background-color: white;
  margin-bottom: 10px;
  padding: 10rpx 0rpx 10rxp 0rpx;
  border-radius: 5rpx;
}

.fuwu {
  padding-left: 30rpx;
  font-size: 34rpx;
  border-left: 6px solid rgb(255, 153, 0);
  margin-bottom: 10rpx;
}

.big {
  width: 100%;
  height: 300rpx;
  /* border: 1px solid black; */
  display: flex;
  flex-wrap: wrap;
  /* justify-content: space-around; */
}

.wifi {
  width: 20%;
  position: relative;
}

.wifi-img {
  width: 100rpx;
  height: 100rpx;
  overflow: hidden;
  display: flex;
}

.wifi-img image {
  width: 160%;
  height: 100%;
}

.wifi view:nth-child(2) {
  font-size: 16rpx;
  position: absolute;
  left: 24rpx;
  bottom: 40rpx;
}

