/* 顶部图片 */

page{
   background-color: rgba(229, 229, 229, 0.2);
}
.top{
  width: 100%;
  height: 600rpx;
}
.top image{
  width: 100%;
  height: 100%;
}

/* 购买区域 */
.xuanze{
  margin: 0 auto;
  border: 1px solid black;
  width: 90%;
  height: 400rpx;
  border-radius: 10rpx;
  background-color: white;
  position: relative;
  top: -50rpx;
  text-align: center;
}
.hr{
  width: 70%;
  margin: 0 auto;
   margin-top: 20rpx;
  border-top: 2px dashed rgba(0, 0, 0, 0.5);
}
.small{
  margin-top: 10rpx;
  font-size: 30rpx;
}
.price{
  color: rgb(255, 112, 1);
}
/* 加减符号 */

.stepper {
	width: 82px;
	height: 26px;
	/*给主容器设一个边框*/
	/* border: 1px solid #ccc; */
	border-radius: 3px;
	margin:0 auto;
  padding-top: 5rpx; 
}
 
/*加号和减号*/
.stepper text {
  margin-top: 1prpx;
   /* border: 1px solid black; */
	width: 20px;
  height: 20px;
  border-radius: 20px;
	line-height:18px;
	text-align: center;
	float: left;
}
.jian{
  /* background-color: rgb(255, 153, 0); */
  color:rgba(0, 0, 0, 0.5);
  border:1px solid rgba(0, 0, 0, 0.5);
}
.jia{
  color: white;
  background-color:   rgb(255, 112, 1);
}
.zhi{
  position: relative;
  top: -3px;
  font-weight: bolder;
}
/*数值*/
.stepper input {
	width: 40px;
	height: 26px;
	float: left;
	margin: 0 auto;
	text-align: center;
	font-size: 12px;
	/*给中间的input设置左右边框即可*/
	/* border-left: 1px solid #ccc;
	border-right: 1px solid #ccc; */
}

